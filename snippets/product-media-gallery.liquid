<div class="main-section page-width">
  <!-- Main Swiper -->
  <div class="main-swiper swiper">
    <div class="swiper-wrapper">
      {% for media in product.media %}
        <div
          class="swiper-slide"
          data-media-id="{{ media.id }}"
        >
          {% render 'product-thumbnail',
            media: media,
            media_count: product.media.size,
            position: forloop.index,
            desktop_layout: section.settings.gallery_layout,
            mobile_layout: section.settings.mobile_thumbnails,
            loop: section.settings.enable_video_looping,
            modal_id: section.id,
            xr_button: true,
            media_width: media_width,
            media_fit: section.settings.media_fit,
            constrain_to_viewport: section.settings.constrain_to_viewport,
            lazy_load: true
          %}
        </div>
      {% endfor %}
    </div>
  </div>

  <!-- Thumbnails -->
  <div class="thumbnail-images">
    {% for media in product.media %}
      <img
        src="{{ media.preview_image | image_url: width: 100 }}"
        alt="{{ media.alt | escape }}"
        onclick="mainSwiper.slideTo({{ forloop.index0 }})"
        style="cursor:pointer; margin:5px; border:1px solid #ccc;"
        width="100"
        height="100"
        data-media-id="{{ media.id }}"
      />
    {% endfor %}
  </div>


</div>

<!-- Style -->
<style>
  .main-swiper {
    width: 100%;
    max-width: 600px;
    height: 600px;
    overflow: hidden;
  }
  .swiper-slide {
    display: flex;
    justify-content: center;
  }
  .thumbnail-images img {
    border-radius: 4px;
    opacity: 0.6;
  }
  .thumbnail-images img.active-thumb {
    border: 2px solid #000;
    opacity: 1;
  }
</style>

<!-- Swiper CDN -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"
/>
<script defer src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

<!-- Init Swiper -->
<script>
  let mainSwiper;

  document.addEventListener("DOMContentLoaded", function () {
    mainSwiper = new Swiper(".main-swiper", {
      loop: false,
      slidesPerView: 1,
      spaceBetween: 10,
    });

    // Handle variant media scrolling
    const form = document.querySelector("form[action^='/cart']");
    if (form && window.productData) {
      form.addEventListener("change", function () {
        const variantId = form.querySelector("[name='id']").value;
        const variant = window.productData.variants.find(v => v.id == variantId);
        const mediaId = variant?.featured_media?.id;
        if (mediaId) {
          const targetSlide = document.querySelector(
            `.swiper-slide[data-media-id='${mediaId}']`
          );
          if (targetSlide) {
            const index = [...targetSlide.parentNode.children].indexOf(targetSlide);
            mainSwiper.slideTo(index);
          }
        }
      });
    }

    // Highlight active thumbnail
    mainSwiper.on("slideChange", () => {
      const activeId = document.querySelectorAll(".swiper-slide")[mainSwiper.activeIndex].dataset.mediaId;
      document.querySelectorAll(".thumbnail-images img").forEach(img => {
        img.classList.toggle("active-thumb", img.dataset.mediaId === activeId);
      });
    });
  });
</script>

<!-- Pass Product Data -->
<script>
  window.productData = {{ product | json }};
</script>

<style>
   .main-swiper{
    height:100%;
  }
  .thumbnail-images img{
    opacity: 1;
  }
</style>
